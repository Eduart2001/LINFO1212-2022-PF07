<style></style>



<form id="regForm" action="">
    <!-- One "tab" for each step in the form: -->
    <div class="tab">
      <h1>Continue:</h1>
      Name:
      <p>
        <input id ="first" placeholder="First name..." oninput="this.className = ''" />
      </p>
      <p>
        <input id ="last" placeholder="Last name..." oninput="this.className = ''" />
      </p>
      <p>
        <input id ="birthdate" placeholder="birthdate..." oninput="this.className = ''" />
      </p>
    </div>

    <div class="tab">
      Contact Info:
      <p><input id ="email" placeholder="E-mail..." oninput="this.className = ''" /></p>
      <p><input id ="phoneNumber" placeholder="Phone..." oninput="this.className = ''" /></p>
    </div>
    <div class="tab">
        <div class="span9" id="timeTable">
          <% for(var i=1; i<= 7; i++) { %> 
            <div class="row-fluid separator time-row">
                <div class="span2 date-desc">
                  <span class="date-desc-label">Sot, E MARTÃ«</span>
                  <time>20.12.2022</time>
                </div>
                <div class="span10">
                  <% for(var j=0; i< data.length; i++) { %> 
                    <% if(data[i].date==i) { %> 
                    <div class="row-fluid start-times">
                        <div class="span3 enable">
                            <a data-filter="filtered" href="" data-link="select">
                            <p class="time-desc"> "<%= data[i].time %>:00"<span class="icon_20px_Ticket red-font"></span></p>
                            <p class="room-desc"><%= data[i].hallId %></p>
                            </a>
                        </div>
                    </div>
                    <% } %>
                    <% } %>  
                </div>        
              </div>
          <% } %>
        <br>
      </div>
    </div>



    <div class="tab">
      Seats:
      <%- include("../hall/seats.ejs") %>
    </div>
    <div class="tab">
      Payment:
      <p><input placeholder="Card holder name" oninput="this.className = ''" /></p>
      <p><input placeholder="Card number" oninput="this.className = ''" /></p>
      <p><input placeholder="Exp date" oninput="this.className = ''" /><input placeholder="CSV" oninput="this.className = ''" /></p>
    </div>

    <div style="overflow: auto">
      <div style="float: right">
        <button type="button" id="prevBtn" onclick="nextPrev(-1)">
          Previous
        </button>
        <button type="button" id="nextBtn" onclick="nextPrev(1)">Next</button>
      </div>
    </div>

    <!-- Circles which indicates the steps of the form: -->
    <div style="text-align: center; margin-top: 40px">
      <span class="step"></span>
      <span class="step"></span>
      <span class="step"></span>
      <span class="step"></span>
    </div>
  </form>
  <script src="./../../script/script-add-to-time-table.js"></script>