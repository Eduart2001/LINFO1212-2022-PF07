<form action="/add" method="post" enctype="multipart/form-data">
    <div class="form-outline mb-3 row justify-content-center">
        <label for="staticName" class="col-form-label col-sm-5 ">Movie name</label>
        <input type="text"  class="col-form-control col-sm-5 " name="movieName" required>
    </div>
    <div class="form-outline mb-3 row justify-content-center">
        <label for="description" class="col-form-label col-sm-5 ">DESCRIPTION</label>
        <textarea class="col-form-control col-sm-5 " name="description" rows="3" required></textarea>
    </div>
    <div class="form-outline mb-3 row justify-content-center">
        <label for="date" class="col-form-label col-sm-5 ">RELEASE DATE</label>
        <input type="date"class="col-form-control col-sm-5 -plaintext" name="date" required>
    </div>
    <div class="form-outline mb-3 row justify-content-center">
        <label for="actors" class="col-form-label col-sm-5 ">ACTORS</label>
        <input type="text"class="col-form-control col-sm-5 -plaintext" name="actors" required>
    </div>
    <div class="form-outline mb-3 row justify-content-center">
        <label for="directors" class="col-form-label col-sm-5 ">DIRECTORS</label>
        <input type="text"class="col-form-control col-sm-5 -plaintext" name="directors" required>
    </div>
    <div class="form-outline mb-3 row justify-content-center">
        <label for="duration" class="col-form-label col-sm-5 ">DURATION</label>
        <input type="text" class="col-form-control col-sm-5 -plaintext" name="duration" required>
    </div>
    <div class="form-outline mb-3 row justify-content-center">
        <label for="genre" class="col-form-label col-sm-5 ">GENRE</label>
        <input type="text" class="col-form-control col-sm-5 -plaintext" name="genre" required>
    </div>
    <div class="form-outline mb-3 row justify-content-center">
        <label for="trailerURL" class="col-form-label col-sm-5 ">TRAILER URL</label>
        <input type="text" class="col-form-control col-sm-5 -plaintext" name="trailerURL" required>
    </div>
    <div class="form-outline mb-3 row justify-content-center">
        <label for="country" class="col-form-label col-sm-5 ">COUNTRY</label>
        <input type="text" class="col-form-control col-sm-5 -plaintext" name="country" required>
    </div>
    <div class="form-outline mb-3 row justify-content-center">
        <label for="restrictionAge" class="col-form-label col-sm-5 ">RESTRICTION AGE</label>
        <input type="text" class="col-form-control col-sm-5 -plaintext" name="age" required>
    </div>
    <div class="form-outline mb-3 row justify-content-center">
        <label for="imdb" class="col-form-label col-sm-5 ">IMDB SCORE</label>
        <input type="text" class="col-form-control col-sm-5 -plaintext" name="imdb" required>
    </div>
    <div class="form-outline mb-3 row justify-content-center">
        <label for="image" class="col-form-label col-sm-5">IMAGE</label>
        <div id="image-label" class="col-form-label col-sm-5 " id="image">
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="inputGroupFile" name="upload" value="" required>
                <label class="custom-file-label" for="inputGroupFile" aria-describedby="inputGroupFileAddon"><label>
            </div>
            <div class="border rounded-lg text-center p-3">
                <img src="../images/programming pepe.jpg" alt ="wrong path" class="img-fluid" id="preview" />
            </div>
        </div>
    </div>
    <div class="form-outline mb-3 row justify-content-center float">
        <button class="btn-success col-sm-5" type="submit">Submit</button>
    </div>

  </form>